@{
    ViewData["Title"] = "Каталог проектов";
    @model IEnumerable<ProjectCatalogViewModel>
}

<ul class="projects clearfix">
    @foreach (var x in Model)
    {
        <li class="project-wrapper">
            <div class="project">
                <h2>Название - @x.Name</h2>
                <div class="project-photo">
                    <img src="~/imgs/project.jpg" alt="">
                    <button class="btn btn-primary project-btn-preview">
                        Просмотр проекта
                    </button>
                </div>
                <h3>Направленность</h3>
                <h3>Руководитель - @x.Manager</h3>
                <h3>Учебное заведение</h3>
                <button class="btn btn-primary project-btn-public">
                    Принять участие
                </button>
            </div>
        </li>
    }
</ul>


<style>
    .project-wrapper {
        display: block;
        width: 100%;
        float: left;
        transition: width .2s;
    }

    @@media only screen and (min-width: 450px) {
        .project-wrapper {
            width: 50%;
        }
    }

    @@media only screen and (min-width: 768px) {
        .project-wrapper {
            width: 33.333%;
        }
    }

    @@media only screen and (min-width: 1000px) {
        .project-wrapper {
            width: 25%;
        }
    }

    .project {
        display: block;
        border: 1px solid royalblue;
        border-radius: 3px;
        position: relative;
        background-color: rgba(194, 223, 255, 0.81);
        margin: 0 20px 20px 0;
        text-decoration: none;
        z-index: 0;
    }

    .projects {
        list-style: none;
        margin: 0 -20px 0 0;
        padding: 0;
    }

    .project-photo {
        position: relative;
        padding-bottom: 100%;
        overflow: hidden;
    }

        .project-photo img {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            max-width: 100%;
            max-height: 100%;
            margin: auto;
            transition: transform .4s ease-out;
        }

    .project:hover .project-photo img {
        transform: scale(1.05);
    }

    .project h2 {
        font-size: 18px;
        text-align: center;
        color: royalblue;
        font-weight: bold;
        margin-top: 10px;
    }

    .project h3 {
        text-align: center;
        font-size: 16px;
        color: darkblue;
    }

    .project-btn-preview {
        transform: translate(45%, 500%);
        opacity: 0;
    }

    .project:hover .project-btn-preview {
        opacity: 1;
    }

    .project-btn-public {
        transform: translate(25%, 0);
        margin-bottom: 10px;
    }
</style>

