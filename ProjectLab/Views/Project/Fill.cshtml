
@{
    ViewData["Title"] = "Fill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model AnswearBrowseProjectViewModel
}

<div class="background">
    <form asp-action="Fill" asp-controller="Project" method="post">
        <div class="container">
            <input type="hidden" asp-for="ProjectId" />
            <input type="hidden" asp-for="SectionNum" />
            @for (var i = 0; i < Model.Components.Count; i++)
            {
                <div class="row">
                    <div class="col-3">
                        <label>@Model.Components[i].Name</label>
                    </div>
                    <div class="col-8">
                        @if (Model.Components[i].ComponentType == "Текст" || Model.Components[i].ComponentType == "Сообщение")
                        {
                            <input type="text" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Дата")
                        {
                            <input type="date" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Время")
                        {
                            <input type="datetime" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Число")
                        {
                            <input type="number" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Флаг")
                        {
                            <input type="checkbox" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Файл")
                        {
                            <input type="file" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Фото")
                        {
                            <input type="file" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Место")
                        {
                            <input type="text" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Выбор")
                        {
                            <input type="text" name="Model.Components[@i].Value" class="form-control" />
                        }
                        else if (Model.Components[i].ComponentType == "Гиперссылка")
                        {
                            <input type="url" name="Model.Components[@i].Value" class="form-control" />
                        }
                    </div>
                </div>
            }
            <button type="submit" class="btn btn-primary">Загрузить</button>
        </div>
    </form>
</div>

