@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        @if (User.IsInRole("Админ"))
        {
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index"><em>@User.Identity.Name </em> </a>
        }
        else
        {
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Account"><em>@User.Identity.Name </em> </a>
        }
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Account" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Выход</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
    </li>
}
</ul>
