@{
    ViewData["Title"] = "Авторизация";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model LoginViewModel
}

<h1>Вход на сайт</h1>

<form method="post" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="row">
            <div class="col-2">
                <label class="form-control" asp-for="Email">Email</label><br />
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="col-5">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label class="form-control" asp-for="Password">Пароль</label><br />
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="col-5">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a asp-action="Register" asp-controller="Account">Регистрация</a>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Войти</button>
            </div>
        </div>
    </div>
</form>

<style>
    form {
        background-color: rgba(194, 223, 255, 0.81);
    }
    span {
        color: red;
    }
</style>